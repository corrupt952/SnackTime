{
  "manifest_version": 3,
  "name": "Snack Time",
  "version": "0.0.1",
  "description": "This extension is a timer to help you keep your break time.",
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
